<?xml version="1.0" encoding="UTF-8"?>
<!--
	Configuration file for the workflow agent.
	These settings will be reloaded each time the workflow agent is run.
  This file should be located in the <Kofax Capture Server Files>\Config directory (e.g., \\server\CaptureSV\Config)
-->
<Config>

  <!--
		LogDirectory: Directory in which to store log files generated by this application
	-->
  <LogDirectory>\\localhost\CaptureSV\Logs\HandleRejectWFA\</LogDirectory>
  
	<!--
		GenericErrorMessage: Error message used when no other error message can be derived.
	-->
	<GenericErrorMessage>An error occurred in the batch. No other error information could be derived.</GenericErrorMessage>

	<!--
		Batch class level configuration
	-->
	<BatchClassConfig BatchClass="Handle Reject WFA Test">

		<!-- Batch field that stores the error text -->
		<ErrorMsgBatchField>ErrorText</ErrorMsgBatchField>

		<!-- Name of the module to route the batch to when an error is detected -->
		<RouteToModuleName>Validation</RouteToModuleName>

	</BatchClassConfig>

</Config>